{
  "extends": ["eslint:recommended", "standard", "plugin:lit/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "html",
    "lit"
  ],
  "rules": {
    "require-atomic-updates": "off",
    "brace-style": "off",
    "new-cap": "off",
    "no-var": "error",
    "require-jsdoc": "off",
    "lit/no-legacy-template-syntax": "off"
  },
  "globals": {
    "Polymer": true,
    "moment": true
  }
}
