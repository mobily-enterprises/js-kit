{
  "name":"server-store",
  "version":"1.0.0",
  "component": true,
  "description":"Add a DB store to the app",
  "author":"Tony Mobily",
  "moduleDependencies":[
    "server-stores"
  ],
  "position": 510,
  "manipulate":{
    "json":{
      "server/package.json":[
        {
            "if": "<%=vars.newElementInfo.typeOfStore === 'db'%>", 
            "op":"setIfNotThere",
            "key":"dependencies.jsonreststores-mysql",
            "value":"^2.x.x"
        }
      ]
    },  
    "text":{
      "server/stores/<%=vars.newStoreInfo.version%>/<%=vars.newStoreInfo.name%>.js":[
        {
          "op":"resolve-ejs"
        },
      ]
    }
  }
}
