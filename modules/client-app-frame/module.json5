{
  "name":"client-app-frame",
  "version":"1.0.0",
  "description":"App frame -- app with drawer, dynamic loading",
  "author":"Tony Mobily",
  "moduleDependencies":[
    "client-base"
  ],
  "position": 10,
  "manipulate":{
    "json":{
       "package.json":[
          {
             "op":"set",
             "key":"dependencies.routify",
             "value":"^1.2.x"
          },
          {
             "op":"set",
             "key":"dependencies.tpe",
             "value":"^1.x.x"
          },
          {
             "op":"set",
             "key":"dependencies.tpe-material",
             "value":"^1.x.x"
          },
          {
             "op":"set",
             "key":"dependencies.historify",
             "value":"^1.0.3"
          }
       ]
    },
    "text":{
      "index.html":[
        {
           "op":"insert",
           "position":"before",
           "newlineAfter":false,
           "anchorPoint":"<!-- Head - end DELETED -->",
           "value":"<script type=\"module\" src=\"node_modules/tpe-material/tpe-material.js\"></script>"
        }
      ],
      "src/lib/base/elements/<%=vars.elPrefix%>-header.js":[
        {
          "op":"resolve-ejs"
        }
      ],
      "src/lib/base/elements/<%=vars.elPrefix%>-page-header.js":[
        {
          "op":"resolve-ejs"
        }
      ],
      "src/lib/base/elements/<%=vars.elPrefix%>-toggle-button.js":[
        {
          "op":"resolve-ejs"
        }
      ],
      "src/lib/base/PageStackElement.js":[
        {
          "op":"resolve-ejs"
        },
      ],
      "src/<%=vars.appFile%>.js":[
        {
          "op":"insert",
          "position":"before",
          "newlineAfter":false,
          "anchorPoint":"/* Loaded modules -- end */",
          "valueFromFile":"imports.js"
        },
        {
          "op":"insert",
          "position":"after",
          "newlineBefore":false,
          "anchorPoint":"/* Style array -- start */",
          "value":"appTheme,"
        },

        {
           "op":"custom",
           "function":"replaceBaseClass",
           "baseClass":"AppElement"
        },
        {
           "op":"custom",
           "function":"addMixinToElement",
           "mixin":"MainPageMixin"
        },
        {
          "op":"insert",
          "newlineBefore":true,
          "position":"before",
          "anchorPoint":"/* App methods -- end */",
          "valueFromFile":"methods.js"
        },
        {
          "op":"insert",
          "position":"after",
          "newlineBefore":true,
          "anchorPoint":"/* Loaded modules -- end */",
          "valueFromFile":"dynamicImports.js"
        },
        /* App styles -- start */
        {
          "op":"insert",
          "position":"after",
          "newlineBefore":true,
          "anchorPoint":"/* App styles -- start */",
          "valueFromFile":"styles.css"
        },
        {
          "op":"deleteText",
          "deleteRegexp":"^      <main>[\\s\\S]*</main>[\n\r]",
          "deleteRegexpOptions":"m",
        },
        {
          "op":"insert",
          "position":"after",
          "newlineBefore":true,
          "newlineAfter":true,
          "anchorPoint":"/* App render function -- start */",
          "valueFromFile":"drawer.js"
        },
        {
          "op":"insert",
          "position":"after",
          "newlineBefore":true,
          "newlineAfter":true,
          "anchorPoint":"<!-- App render -- start -->",
          "valueFromFile":"render.html"
        }
      ]
    }
  }
}
