{
  "name":"client-app-element",
  "version":"1.0.0",
  "component": true,
  "description":"Generic (placed) element for js-kit",
  "author":"Tony Mobily",
  "moduleDependencies":[
    "client-app-frame"
  ],
  "position": 20,
  "extraCopyDirectory": "common",
  "manipulate":{
    "text":{
      "<%=vars.newElementInfo.copyToDirectory%>/<%=vars.newElementInfo.name%>.js":[
        {
          "op":"resolve-ejs"
        },
      ],
      "<%=vars.newElementInfo.destination.file%>":[
        {
          "if": "<%=vars.newElementInfo.placeElement%>",
          "op": "insert",
          "position": "before",
          "newlineAfter": false,
          "newlineBefore": false,
          "anchorPoint": "<%-vars.newElementInfo.destination.anchorPoint%>",
          "value":"<<%=vars.newElementInfo.name%><%-vars.newElementInfo.inTab ? ` tab-name=\"${vars.newElementInfo.name}\" slot=\"content\"` : ''%>></<%=vars.newElementInfo.name%>>"
        },
        {
          "if": "<%=vars.newElementInfo.placeElement%>",
          "op": "insert",
          "position": "before",
          "newlineAfter": false,
          "anchorPoint": "/* Loaded modules -- end */",
          "value": "import '<%=vars.newElementInfo.importPath%>'"
        },
        {
          "if": "<%=vars.newElementInfo.placeElement && vars.newElementInfo.inTab %>",
          "op": "insert",
          "position": "before",
          "newlineAfter": false,
          "newlineBefore": false,
          "anchorPoint": '<!-- Element tab heading insertion point -->',
          "value":"<div tab-name=\"<%=vars.newElementInfo.name%>\"><%=scaffoldizerUtils.capitalize(vars.newElementInfo.nameNoPrefix)%></div>"
        }
      ]
    }
  }
}
