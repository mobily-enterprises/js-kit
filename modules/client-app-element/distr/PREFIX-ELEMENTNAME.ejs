/* Loaded modules -- start */
import { html, css } from 'lit'
import { <%=vars.newElementInfo.baseClass%> } from '<%=vars.newElementInfo.libPath%>/base/<%=vars.newElementInfo.baseClass%>.js'
import { <%=vars.newElementInfo.baseMixin%> } from '<%=vars.newElementInfo.libPath%>/base/<%=vars.newElementInfo.baseMixin%>.js'
/* Loaded modules -- end */

class Element extends <%=vars.newElementInfo.baseMixin%>(<%=vars.newElementInfo.baseClass%>) {
  <%if(vars.newElementInfo.ownPath){ %>static get pagePath () { return ['<%=vars.newElementInfo.pagePath%>'] }<% } else { %>// No URL since this is not a page<% } %>

  static get styles () {
    return [
      /* Style array -- start */
      ...super.styles,
      /* Style array -- end */
      css`
        :host {
          /* Host styles -- start */
          display: block;
          /* Host styles -- end */
        }
        /* Element styles -- start */
        /* Element styles -- end */
      `
    ]
  }

  /* Element methods -- start */
  constructor () {
    super()
    /* Constructor -- start */
<%if(vars.newElementInfo.ownHeader){ -%>
    this.pageTitle = '<%=vars.newElementInfo.menuTitle%>'
<% } -%>
    /* Constructor -- end */
  }

  render () {
    /* Element render function -- start */
    return html`
      <!-- Element render -- start -->
      <%if(vars.newElementInfo.ownHeader){ %>${this.renderHeader()} <% } %>
      <%if(vars.newElementInfo.ownPath) { -%>
      
      <ee-tabs use-hash passive id="tab-<%=vars.newElementInfo.nameNoPrefix%>" default="" name-attribute="tab-name">
      <a name="<%=vars.newElementInfo.nameNoPrefix%>" href="<%=vars.newElementInfo.pagePath%><%=vars.newElementInfo.subPath%>"><div><%=scaffoldizerUtils.capitalize(vars.newElementInfo.nameNoPrefix)%></div></a>

      <!-- Page tab heading insertion point -->
        <div page-path="<%=vars.newElementInfo.pagePath%>" routing-group="<%=vars.newElementInfo.name%>" slot="content">
          <h2><%=vars.newElementInfo.nameNoPrefix%></h2>
          <!-- Element insertion point -->
        </div>
      
      <!-- Page tab insertion point -->
    </ee-tabs>
      <% } else { %>
    <section>
      <h2><%=vars.newElementInfo.nameNoPrefix%></h2>
      <!-- Element insertion point -->
    </section> 
      <% } %>

      <!-- Element render -- end -->
    `
    /* Element render function -- end */
  }
  /* Element methods -- end */
}

window.customElements.define('<%=vars.newElementInfo.name%>', Element)
